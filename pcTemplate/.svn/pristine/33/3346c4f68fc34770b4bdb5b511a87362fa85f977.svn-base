.container {
  height: 100%;
  background-image: url(./../../assets/images/BG.png);

  .wrap {
    position: absolute;
    width: 320px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);

    .login {
      text-align: center;
    }

    .title {
      font-size: 26px;
      text-align: center;
      line-height: 50px;
      color: #2c3e50;
    }

    .version {
      font-size: 12px;
      text-align: center;
      margin-top: 50px;
    }

    .copyright {
      font-size: 12px;
      text-align: center;
      bottom: 0;
    }

    .formContainer {
      display: inline-block;
      width: 100%;

      .icon {
        opacity: .25;
      }
    }
  }
}
